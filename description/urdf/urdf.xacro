<?xml version="1.0" ?>
<robot name="urdf" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="$(find cobalt)/description/urdf/inertia.xacro" />
<xacro:include filename="$(find cobalt)/description/urdf/materials.xacro" />
<xacro:include filename="$(find cobalt)/description/urdf/urdf.trans" />
<xacro:include filename="$(find cobalt)/description/urdf/urdf.gazebo" />
<xacro:include filename="$(find cobalt)/description/urdf/control.xacro" />

<!-- Base link -->

<link name="base_link">
</link>

<!-- Chassis -->

<link name="chassis">
    <visual>
        <origin xyz="0 0 ${1.7 * 0.001}" rpy="${pi} 0 0"/>
        <geometry>
          <mesh filename="file://$(find cobalt)/description/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="${26 * 0.001}" radius="${50 * 0.001}"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.068" length="${1.7  * 0.001}" radius="${50 * 0.001}">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 ${-6.6 * 0.001}"/>
</joint>

<link name="battery">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="file://$(find cobalt)/description/meshes/battery.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${28 * 0.001} ${60 * 0.001} ${20 * 0.001}"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="0.063" x="0" y="0" z="0">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>

<joint name="chassis_battery_joint" type="fixed">
    <parent link="chassis"/>
    <child link="battery"/>
    <origin xyz="${-28 * 0.001} 0 ${1.7 * 0.001}"/>
</joint>

<!-- Left wheel -->

<link name="left_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find cobalt)/description/meshes/tire.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="yellow"/>
  </visual>
  <collision>
    <origin xyz="0 0 ${5 * 0.001}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${10 * 0.001}" radius="${21 * 0.001}"/>
    </geometry>
  </collision>
  <xacro:inertial_cylinder mass="0.008" length="${10  * 0.001}" radius="${21 * 0.001}">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder>
</link>

<joint name="left_wheel_joint" type="continuous">
  <origin xyz="0 ${35.4 * 0.001} 0" rpy="${-pi/2} 0 0"/>
  <parent link="base_link"/>
  <child link="left_wheel"/>
  <axis xyz="0.0 0.0 1.0"/>
</joint>

<!-- Right wheel -->

<link name="right_wheel">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <geometry>
      <mesh filename="file://$(find cobalt)/description/meshes/tire.stl" scale="0.001 0.001 0.001"/>
    </geometry>
    <material name="yellow"/>
  </visual>
  <collision>
    <origin xyz="0 0 ${5 * 0.001}" rpy="0 0 0"/>
    <geometry>
      <cylinder length="${10 * 0.001}" radius="${21 * 0.001}"/>
    </geometry>
  </collision>
  <xacro:inertial_cylinder mass="0.008" length="${10  * 0.001}" radius="${21 * 0.001}">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:inertial_cylinder>
</link>

<joint name="right_wheel_joint" type="continuous">
  <origin xyz="0 ${-35.4 * 0.001} 0" rpy="${pi/2} 0 0"/>
  <parent link="base_link"/>
  <child link="right_wheel"/>
  <axis xyz="0.0 0.0 -1.0"/>
</joint>

</robot>